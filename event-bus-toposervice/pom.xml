<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <packaging>bundle</packaging>
    <parent>
        <artifactId>event-bus</artifactId>
        <groupId>pegasus.cip</groupId>
        <version>0.0.1-SNAPSHOT</version>
        <relativePath>..</relativePath>
    </parent>
    <artifactId>event-bus-toposervice</artifactId>
    <name>Event Bus Topology Service</name>
    <description>The Event Bus Topology Service</description>

    <dependencies>
        <dependency>
            <groupId>pegasus.cip</groupId>
            <artifactId>event-bus-client</artifactId>
            <version>0.0.1-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>pegasus.cip</groupId>
            <artifactId>event-bus-rabbit</artifactId>
            <version>0.0.1-SNAPSHOT</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.3.6</version>
                <extensions>true</extensions>
                <configuration>
                    <manifestLocation>META-INF</manifestLocation>
                    <instructions>
                        <Bundle-SymbolicName>pegasus.eventbus.topology.service</Bundle-SymbolicName>
                        <Bundle-Activator>pegasus.eventbus.topology.osgi.Activator</Bundle-Activator>
                        <!-- <Private-Package> pegasus.eventbus.topology.admin, pegasus.eventbus.topology.osgi, pegasus.eventbus.topology.service </Private-Package> -->
                        <!-- <Require-Bundle>pegasus.eventbus.client</Require-Bundle> -->
                        <Import-Package>
                            !COM.jrockit.reflect,
                            !jrockit.vm,
                            !net.sf.cglib.asm.util,
                            !org.apache.tools.ant*,
                            !org.springframework.context.support,
                            !sun.reflect,
                            *
                        </Import-Package>
                        <Embed-Dependency>
                            !event-bus-client*,
                            !event-bus-rabbit*,
                            !mockito-core*,
                            !slf4j-api*,
                            !logback-core*,
                            !logback-classic,
                            !log4j*,
                            !org.osgi*,
                            !org.apache.felix*,
                            !awaitility*,
                            !junit*,
                            !spring-context*,
                            !aopalliance*,
                            !spring-aop*,
                            !spring-bean*,
                            !spring-asm*,
                            !spring-core*,
                            !spring-expression*,
                            !hamcrest-core*,
                            !hamcrest-library*,
                            !commons-logging*,
                            !commons-codec*,
                            !commons-httpclient*,
                            !commons-cli*
                        </Embed-Dependency>
                        <Embed-Transitive>true</Embed-Transitive>
                    </instructions>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.jboss.as.plugins</groupId>
                <artifactId>jboss-as-maven-plugin</artifactId>
                <version>7.1.0.Final</version>
                <configuration>
                    <filename>${project.build.finalName}.jar</filename>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.1</version>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
