 	<logger name="pegasus">
    	<level value="DEBUG" />
  	</logger>	
	
 	<logger name="org.apache.hadoop.conf">
    	<level value="DEBUG" />
  	</logger>	
	
 	<logger name="org.apache.hadoop">
    	<level value="DEBUG" />
  	</logger>	
	
 	<logger name="org.springframework">
    	<level value="DEBUG" />
  	</logger>	
	
	<root>
	  	<priority value="DEBUG"/>
	  	<appender-ref ref="stdout"/>
